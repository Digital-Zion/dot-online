{
  "name": "digital-zion-dot-online",
  "repository": "https://github.com/Digital-Zion/dot-online.git",
  "scripts": {
    "dev": "next",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.json,.jsonc",
    "build": "next build",
    "start": "next start"
  },
  "dependencies": {
    "@formspree/react": "^2.2.4",
    "@notionhq/client": "^1.0.1",
    "@replygirl/change-case-object": "^1.3.0",
    "@replygirl/tc": "^3.0.0",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.3.0",
    "detect-browser": "^5.3.0",
    "formik": "^2.2.9",
    "framer-motion": "^6.2.8",
    "gray-matter": "4.0.3",
    "isomorphic-unfetch": "^3.1.0",
    "next": "^12.1.0",
    "next-seo": "^5.1.0",
    "notion-utils": "^4.16.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^8.0.0",
    "react-use": "^17.3.2",
    "swr": "^1.2.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.16.1",
    "@iconify-json/mdi": "^1.1.1",
    "@next/eslint-plugin-next": "^12.1.0",
    "@svgr/core": "^6.2.1",
    "@tsconfig/next": "^1.0.2",
    "@types/node": "^14.18.12",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "@vercel/node": "^1.13.0",
    "@windicss/plugin-heropatterns": "^0.0.8",
    "@windicss/plugin-interaction-variants": "^1.0.0",
    "@windicss/plugin-question-mark": "^0.1.1",
    "@windicss/plugin-scrollbar": "^1.2.3",
    "change-case": "^4.1.2",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "prettier": "^2.5.1",
    "raw-loader": "^4.0.2",
    "typescript": "^4.6.2",
    "unplugin-auto-import": "^0.6.4",
    "unplugin-icons": "^0.13.2",
    "windicss-webpack-plugin": "^1.6.7"
  },
  "eslintConfig": {
    "extends": [
      "./.eslintrc-auto-import.json",
      "@antfu/eslint-config",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier",
      "sort-keys-fix",
      "@next/next"
    ],
    "rules": {
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": false
          },
          "groups": [
            "builtin",
            "external",
            "internal",
            [
              "parent",
              "sibling",
              "index"
            ],
            "object",
            "unknown"
          ],
          "newlines-between": "always",
          "pathGroups": [
            {
              "pattern": "~/**",
              "group": "internal"
            }
          ],
          "pathGroupsExcludedImportTypes": [
            "builtin",
            "object"
          ]
        }
      ],
      "prettier/prettier": "error",
      "react/jsx-no-undef": [
        "error",
        {
          "allowGlobals": true
        }
      ],
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off",
      "sort-keys-fix/sort-keys-fix": [
        "error",
        "asc",
        {
          "caseSensitive": true,
          "natural": true
        }
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ]
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "vueIndentScriptAndStyle": false,
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto"
  }
}
